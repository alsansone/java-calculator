<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CalculatorController">
    <TextField fx:id="display" alignment="CENTER_RIGHT" editable="false">
      <VBox.margin>
         <Insets bottom="5.0" top="5.0" />
      </VBox.margin></TextField>
    <GridPane>
        <Button fx:id="openP" mnemonicParsing="false" prefHeight="500.0" prefWidth="500.0" text="(" GridPane.columnIndex="0" GridPane.rowIndex="0">
        </Button>
        <Button fx:id="closeP" mnemonicParsing="false" prefHeight="500.0" prefWidth="500.0" text=")" GridPane.columnIndex="1" GridPane.rowIndex="0">
        </Button>
        <Button fx:id="clear" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="C" GridPane.columnIndex="2" GridPane.rowIndex="0">
        </Button>
        <Button fx:id="div" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="/" GridPane.columnIndex="3" GridPane.rowIndex="0">
        </Button>

        <Button fx:id="seven" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="7" GridPane.columnIndex="0" GridPane.rowIndex="1">
        </Button>
        <Button fx:id="eight" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
        </Button>
        <Button fx:id="nine" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1">
        </Button>
        <Button fx:id="mult" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1">
        </Button>

        <Button fx:id="four" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Button>
        <Button fx:id="five" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
        </Button>
        <Button fx:id="six" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2">
        </Button>
        <Button fx:id="minus" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2">
        </Button>

        <Button fx:id="one" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="1" GridPane.columnIndex="0" GridPane.rowIndex="3">
        </Button>
        <Button fx:id="two" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3">
        </Button>
        <Button fx:id="three" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3">
        </Button>
        <Button fx:id="plus" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3">
        </Button>

        <Button fx:id="unary" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="+/-" GridPane.columnIndex="0" GridPane.rowIndex="4">
        </Button>
        <Button fx:id="zero" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4">
        </Button>
        <Button fx:id="point" mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="." GridPane.columnIndex="2" GridPane.rowIndex="4">
        </Button>
        <Button mnemonicParsing="false" onAction="#handleButtonPress" prefHeight="500.0" prefWidth="500.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4">
        </Button>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
